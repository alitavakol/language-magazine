<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:descendantFocusability="blocksDescendants"
            android:paddingBottom="@dimen/spacing_normal">

            <ImageView
                android:id="@+id/poster"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <!--<ImageView
                android:id="@+id/gradient_edge"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/poster"
                android:src="@drawable/half_gradient_up" />-->

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/poster"
                android:fontFamily="monospace"
                android:maxLines="2"
                android:paddingBottom="4dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:paddingTop="2dp"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Item Title" />

            <ImageView
                android:id="@+id/flag"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/type"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/type"
                android:layout_marginBottom="-4dp"
                android:layout_marginTop="-2dp"
                android:paddingStart="@dimen/spacing_normal"
                android:scaleType="fitStart" />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_toEndOf="@id/flag"
                android:fontFamily="monospace"
                android:paddingStart="@dimen/spacing_normal"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/colorPrimaryLight"
                tools:text="type" />

            <TextView
                android:id="@+id/level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="110dp"
                android:elevation="1dp"
                android:paddingBottom="2dp"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/accent"
                android:textStyle="bold|italic"
                tools:text="level" />

            <ImageButton
                android:id="@+id/overflowMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/type"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:paddingEnd="@dimen/spacing_normal"
                tools:src="@drawable/abc_ic_menu_moreoverflow_mtrl_alpha" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>