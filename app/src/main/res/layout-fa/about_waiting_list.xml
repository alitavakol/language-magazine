<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/about_horizontal_margin"
    android:paddingRight="@dimen/about_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ImageButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/about_waiting_list_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/help_text_line_spacing"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:text="@string/about_waiting_list_1"
        android:textColor="@color/colorAccentTransparent"
        android:textSize="@dimen/help_text_size" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/help_text_line_spacing"
        android:text="@string/about_waiting_list_2"
        android:textColor="@color/colorAccentTransparent"
        android:textSize="@dimen/help_text_size" />

    <TextView
        android:id="@+id/english_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/about_waiting_list_3"
        android:textColor="@color/colorAccentTransparent"
        android:textSize="@dimen/help_text_size_en" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lineSpacingMultiplier="@dimen/help_text_line_spacing"
        android:text="@string/about_waiting_list_4"
        android:textColor="@color/colorAccentTransparent"
        android:textSize="@dimen/help_text_size" />
</LinearLayout>